page {
    background-color: #e1e8f6;
}

.vote-detail {
    padding-bottom: 112rpx;
}

.vote-detail-hd-info {
    padding: 28rpx;
    font-size: 28rpx;
    background-color: #ffffff;
}

.vote-title {
    font-size: 40rpx;
    margin-bottom: 12rpx;
    color: #2c2c2c;
}

.vote-content {
    margin-bottom: 12rpx;
    font-size: 32rpx;
}

.create-time .fa-clock-o {
    margin-right: 6rpx;
    font-size: 32rpx;
    vertical-align: -1rpx;
}

.vote-imgs image {
    width: 100%;
}

.vote-detail-con {
    margin-top: 16rpx;
}

.vote-option-percent {
    display: inline-block;
    position: absolute;
    right: 28rpx;
    color: #7087f4;
}

.view-option-box {
    background-color: #ffffff;
}

.vote-option {
    position: relative;
    width: 100%;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 28rpx;
    text-align: center;
    color: #707070;
    -webkit-transition: 2s width ease-in-out;
    transition: 2s width ease-in-out;
}

.vote-progress-state {
    position: absolute;
    top: 0;
    left: 0;
    height: 86rpx;
    opacity: .5;
}

.vote-option-hover {
    background-color: #e5e5e5;
}

.voter-list {
    margin-top: 16rpx;
    font-size: 28rpx;
    color: #707070;
    background-color: #ffffff;
}

.voter-title {
    padding: 20rpx 0;
    font-size: 32rpx;
    color: #7087f4;
}

.voter-item {
    padding: 0 28rpx;
}

.voter-item image {
    width: 60rpx;
    height: 60rpx;
    margin: 18rpx;
    border-radius: 60rpx;
}

.voter-img-list {
    display: -webkit-flex;
    display: flex;
}

.no-data-tip {
    display: block;
    padding: 20rpx 0;
    text-align: center;
}

.vote-detail-ft {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 96rpx;
    font-size: 32rpx;
    line-height: 96rpx;
    text-align: center;
    color: #7087f4;
    background-color: #ffffff;
    box-shadow: 0 -2rpx 2rpx rgba(0, 0, 0, 0.1);
}

.vote-detail-ft .fa-home,
.vote-detail-ft button .fa-retweet {
    margin-right: 10rpx;
    font-size: 30rpx;
}

.vote-detail-ft button {
    font-size: 32rpx !important;
    color: #7087f4 !important;
    border: 0;
    line-height: 96rpx;
}

.view-option-box-title {
    padding: 20rpx 28rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #707070;
}